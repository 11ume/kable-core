{
  "name": "kable-core",
  "version": "0.0.1",
  "description": "Core of kable system",
  "main": "main.ts",
  "author": {
    "name": "Horacio Rivero",
    "email": "horacioriverods@gmail.com"
  },
  "repository": "11ume/kable-core",
  "license": "MIT",
  "scripts": {
    "test": "node node_modules/ava/cli.js -s",
    "test:watch": "node node_modules/ava/cli.js -w -vs",
    "test:verbose": "node node_modules/ava/cli.js -vs",
    "test:coverage": "nyc ava -vs",
    "clean": "rm -rf .nyc_output coverage",
    "lint": "node node_modules/tslint/bin/tslint -c tslint.json --project .",
    "build": "tsc -p ./tsconfig.json",
    "prepublishOnly": "npm run lint & npm run test & npm run build & npm run clean",
    "postinstall": "npm run build"
  },
  "nyc": {
    "exclude": [
      "dist/*",
      "test/utils/*"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "ava": {
    "compileEnhancements": false,
    "concurrency": 6,
    "cache": true,
    "files": [
      "!dist",
      "!dev",
      "!test/utils/*"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@types/node": "^13.1.8",
    "@types/uuid": "^3.4.6",
    "@msgpack/msgpack": "^1.11.0",
    "interval-handler": "^0.0.1-alpha",
    "ope-abort": "^0.0.2",
    "typescript": "^3.7.4",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "ava": "2.4.0",
    "nyc": "^15.0.0",
    "ts-node": "^8.6.2",
    "tslint": "^5.20.1"
  }
}